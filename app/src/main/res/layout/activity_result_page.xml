<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ResultPageActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_height="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Sagar"
        android:textColor="#000"
android:id="@+id/txt_name"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Quiz Had Completed"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"></TextView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:layout_height="80dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q. Who is the best cricketer in the world?"
                android:textColor="#000"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:id="@+id/question1"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer : Sachin"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/ans1"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                ></TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="10dp"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:layout_height="80dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q. What are the colors in the national flag?"
                android:textColor="#000"
                android:id="@+id/question2"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer : White, Yellow, Orange"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/ans2"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                ></TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:cornerRadius="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:theme="@style/FormButton"
            android:textColorHint="@color/whiteColor"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Finish"
            android:id="@+id/btnFinish"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:cornerRadius="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:theme="@style/FormButton"
            android:textColorHint="@color/whiteColor"
            android:backgroundTint="@color/colorPrimary"
            android:hint="History"
            android:id="@+id/btnHistory"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>